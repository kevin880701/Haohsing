<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_place_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:includeFontPadding="false"
        android:textAppearance="@style/TextAppearance.HAOHSING.HeadLine3"
        android:textColor="@color/colorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="單位1" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_r10_white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_place_count">

        <FrameLayout
            android:id="@+id/fl_place_name"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="單位名稱"
                android:textAppearance="@style/TextAppearance.HAOHSING.Body1" />

            <TextView
                android:id="@+id/tv_place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="54dp"
                android:textAppearance="@style/TextAppearance.HAOHSING.Body1"
                tools:text="豪星大樓" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="25dp"
                android:src="@drawable/ic_right_arrow" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:alpha="0.2"
            android:background="@color/colorSecondary" />

        <FrameLayout
            android:id="@+id/fl_area_count"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="區域"
                android:textAppearance="@style/TextAppearance.HAOHSING.Body1" />

            <TextView
                android:id="@+id/tv_area_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="54dp"
                android:textAppearance="@style/TextAppearance.HAOHSING.Body1"
                tools:text="7個區域" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="25dp"
                android:src="@drawable/ic_right_arrow" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:alpha="0.2"
            android:background="@color/colorSecondary" />

        <FrameLayout
            android:id="@+id/fl_share_count"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="設備分享"
                android:textAppearance="@style/TextAppearance.HAOHSING.Body1" />

            <TextView
                android:id="@+id/tv_share_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="54dp"
                android:textAppearance="@style/TextAppearance.HAOHSING.Body1"
                tools:text="3個成員" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="25dp"
                android:src="@drawable/ic_right_arrow" />

        </FrameLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_delete_place"
        style="@style/Widget.NormalRedButton.Outline"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="9dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:includeFontPadding="false"
        android:text="刪除此單位"
        android:textColor="@color/color_normal_red_press_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_content" />

</androidx.constraintlayout.widget.ConstraintLayout>