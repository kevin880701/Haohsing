<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_r4_white"
    tools:context=".ui.dialog.SignatureDialog">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="16dp"
        android:includeFontPadding="false"
        android:text="簽名板"
        android:textAppearance="@style/TextAppearance.HAOHSING.HeadLine2"
        android:textColor="#1a1a1a" />

    <ImageButton
        android:id="@+id/bt_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:src="@drawable/ic_x"
        app:tint="#808080" />

    <TextView
        android:id="@+id/tv_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="48dp"
        android:includeFontPadding="false"
        tools:text="費用：1000 元"
        android:textAppearance="@style/TextAppearance.HAOHSING.Body1"
        android:textColor="@color/colorPrimary" />

    <se.warting.signatureview.views.SignaturePad
        android:id="@+id/signature_pad"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="80dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_confirm"
        android:layout_width="40dp"
        android:layout_height="24dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        android:text="@string/confirm"
        android:textColor="@color/colorPrimary" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_cancel"
        android:layout_width="40dp"
        android:layout_height="24dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        android:text="@string/cancel"
        android:textColor="#808080" />


</FrameLayout>